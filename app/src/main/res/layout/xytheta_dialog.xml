    android:layout_height="fill_parent"
    xmlns:Android="http://schemas.android.com/tools"
    android:orientation="vertical">



    <EditText
        android:id="@+id/editTestX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
